<?xml version="1.0" encoding="utf-8" ?>
<ListView x:Class="MAUIsland.ControlInfoListView"
          xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
          xmlns:app="clr-namespace:MAUIsland"
          x:DataType="app:SearchBarPageViewModel"
          x:Name="Root"
          HeightRequest="400">
    <ListView.Resources>
        <Style x:Key="ReverseTheme" TargetType="Label">
            <Setter Property="TextColor" Value="{AppThemeBinding Light={x:Static app:AppColors.White}, Dark={x:Static app:AppColors.Black}}" />
        </Style>
    </ListView.Resources>
    <ListView.ItemTemplate>
        <DataTemplate x:DataType="app:IGalleryCardInfo">
            <ViewCell>
                <Border Padding="5"
                        BackgroundColor="{x:Static app:AppColors.BlackGrey}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="5" />
                    </Border.StrokeShape>
                    <Grid ColumnDefinitions="0.2*, 0.2*, 0.6*" 
                          HeightRequest="40">
                        <Image Grid.Column="0"
                               Source="{x:Binding ControlIcon}"
                               VerticalOptions="Center"/>
                        <Label Grid.Column="1"
                               FontAttributes="Bold"
                               LineBreakMode="TailTruncation"
                               FontSize="14"
                               Text="{x:Binding ControlName}"
                               VerticalTextAlignment="Center" 
                               Style="{x:StaticResource ReverseTheme}"/>
                        <Label Grid.Column="2"
                               FontAttributes="Italic"
                               LineBreakMode="TailTruncation"
                               FontSize="12"
                               VerticalTextAlignment="Center"
                               Text="{x:Binding ControlDetail}"
                               Style="{x:StaticResource ReverseTheme}"/>
                    </Grid>
                </Border>
            </ViewCell>
        </DataTemplate>
    </ListView.ItemTemplate>
</ListView>
