<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:app="clr-namespace:MAUIsland"
             x:Class="MAUIsland.ControllInfoCollectionTwoItemRowTemplateContentView"
             x:Name="root">
    <Border Padding="5"
            BackgroundColor="{x:Static app:AppColors.BlackGrey}">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="5" />
        </Border.StrokeShape>
        <Grid ColumnDefinitions="0.2*, 0.8*"
              RowDefinitions="0.3*, 0.7*"
              HeightRequest="100">
            <Image Grid.Column="0"
               Grid.Row="0"
               Source="{x:Binding ComponentData.ControlIcon, Source={x:Reference root}}"
               VerticalOptions="Center"/>
            <Label Grid.Column="1"
                   Grid.Row="0"
                   FontAttributes="Bold"
                   LineBreakMode="TailTruncation"
                   FontSize="14"
                   VerticalTextAlignment="Center" 
                   HorizontalOptions="Center"
                   Text="{x:Binding ComponentData.ControlName, Source={x:Reference root}}"
                   Style="{x:StaticResource ReverseTheme}"/>
            <Border Padding="2"
                    Grid.Column="0"
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    BackgroundColor="{x:Static app:AppColors.BlackGrey}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="5" />
                </Border.StrokeShape>
                <Label FontAttributes="Italic"
                       FontSize="12"
                       Background="{x:Static app:AppColors.BlackGrey}"
                       Text="{x:Binding ComponentData.ControlDetail, Source={x:Reference root}}"
                       Style="{x:StaticResource ReverseTheme}"/>
            </Border>
        </Grid>
    </Border>
</ContentView>
